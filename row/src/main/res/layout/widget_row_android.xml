<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mRowIconImg"
        android:layout_width="@dimen/row_icon_size_width"
        android:layout_height="@dimen/row_icon_size_height"
        android:layout_marginLeft="@dimen/row_spacing_small"
        tools:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/mRowLabel"
        style="@style/mRowLabelStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/row_spacing_normal"
        android:layout_weight="1.0"
        tools:text="我的动态" />
</androidx.appcompat.widget.LinearLayoutCompat>