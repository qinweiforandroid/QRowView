<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/mWidgetRowIconImg"
        android:layout_width="@dimen/row_icon_size_width"
        android:layout_height="@dimen/row_icon_size_height"
        android:layout_marginLeft="@dimen/row_spacing_small"
        tools:src="@android:drawable/sym_def_app_icon" />

    <TextView
        android:id="@+id/mWidgetRowLabel"
        style="@style/mRowLabelStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/row_spacing_normal"
        android:layout_weight="1"
        android:text="姓名" />

    <Switch
        android:id="@+id/mWidgetSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>